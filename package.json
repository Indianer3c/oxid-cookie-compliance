{
  "name": "oxid-cookie-compliance",
  "version": "1.0.9",
  "private": true,
  "scripts": {
    "release": "dotenv release-it -VV",
    "build": "node-sass src/styles/main.scss --output-style=compressed > copy_this/modules/agcookiecompliance/out/css/agcookiecompliance.min.css",
    "test-release": "release-it --dry-run"
  },
  "devDependencies": {
    "release-it": "^13.5.4",
    "@release-it/bumper": "^1.1.0",
    "auto-changelog": "^2.0.0",
    "dotenv-cli": "^3.1.0",
    "node-sass": "^4.14.0"
  },
  "release-it": {
    "github": {
      "release": true
    },
    "npm": {
      "publish": false
    },
    "hooks": {
      "after:bump": "npx auto-changelog -p",
      "after:release": [
        "echo Successfully released ${name} v${version} to ${repo.repository}."
      ]
    },
    "plugins": {
      "@release-it/bumper": {
        "out": [
          {
            "file": "copy_this/modules/agcookiecompliance/metadata.php",
            "type": "text/php"
          },
          {
            "file": "composer.json",
            "type": "application/json"
          }
        ]
      }
    }
  }
}
